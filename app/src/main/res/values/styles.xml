<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppFont">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppFont.AppColorPrimary">
        <item name="android:textColor">#616161</item>
    </style>

    <style name="AppFont.AppColorPrimary.AppSmallText">

        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppFont.AppColorPrimary.AppMediumText">

        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppFont.AppColorPrimary.AppLargeText">

        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppFont.AppExtraLargeText">

        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#909090</item>
    </style>

    <style name="AppFont.AppExtraLargeTextLight">

        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#909090</item>
    </style>

    <style name="MyRadioButton">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">#F00</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="TextViewGradient">
        <item name="android:text">Gradient</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>
</resources>

